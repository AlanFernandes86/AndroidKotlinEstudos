<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:background="@android:color/background_light">

    <TextView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/index_text_symbol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="QUAL3"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#000000"/>

    <TextView
    app:layout_constraintTop_toBottomOf="@id/index_text_symbol"
    app:layout_constraintStart_toStartOf="parent"
    android:id="@+id/index_text_company"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="QUALICORP ON NM"
    android:textSize="14sp"
    />

    <TextView
    app:layout_constraintTop_toTopOf="@id/index_text_symbol"
    app:layout_constraintStart_toEndOf="@id/index_text_symbol"
    app:layout_constraintEnd_toEndOf="parent"
    android:id="@+id/index_text_price"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="33.95"
    android:textSize="18sp"
    android:textStyle="bold"
    android:textColor="#000000"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/index_text_symbol"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/index_text_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="7.68%"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFC107"/>

    <TextView
        app:layout_constraintTop_toTopOf="@id/index_text_company"
        app:layout_constraintEnd_toEndOf="parent"
        android:id="@+id/index_text_var_index"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.42"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFC107"/>


</androidx.constraintlayout.widget.ConstraintLayout>